<h1><%= "Editing CSS for Game: #{@game.name}" %></h1>

<% form_tag :action => :update_css_code, :id => @game.id do %>
  <br />
  <%= text_area_tag :source_code, @css_code, :cols => 80, :rows => 35 %>
  <br />
  <br />
  <%= link_to 'Details', :action => 'show', :id => @game %> | 
  <%= submit_tag 'Update CSS', :onclick => "return confirm('Are you sure?')" %>
<% end %>
